# Gnosis Auth Environment Configuration Example
# Copy this to .env and update with your values

# Application Settings
APP_NAME="Gnosis Auth"
APP_DOMAIN="localhost:5000"
ENVIRONMENT="development"
DEV=True
RUNNING_IN_CLOUD=false
ENABLE_DEV_ENDPOINTS=true

# Security Keys (CHANGE THESE!)
SECRET_KEY="change-this-to-a-random-secret-key"
JWT_SECRET_KEY="change-this-to-another-random-key"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage Configuration
GNOSIS_AUTH_STORAGE_PATH="./storage"
USE_CLOUD_STORAGE=false
GCS_BUCKET_NAME=""

# Google Cloud NDB Configuration
GOOGLE_CLOUD_PROJECT="gnosis-auth-dev"
NDB_EMULATOR_HOST="localhost:8089"

# OAuth2 Configuration (Optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# Email Configuration (Optional)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""
# EMAIL_FROM=""

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL="DEBUG"
LOG_FORMAT="json"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:5000"

# Session Configuration
SESSION_LIFETIME_HOURS=24
SESSION_SECURE_COOKIE=false

# Branding
BRAND="Gnosis Auth"
BRAND_COLOR="#6c63ff"
APP_SUPPORT_EMAIL="support@gnosis-auth.local"
