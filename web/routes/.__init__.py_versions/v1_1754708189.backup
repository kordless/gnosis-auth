"""
Routes registration for Gnosis Auth
"""
from quart import Blueprint
import logging

logger = logging.getLogger(__name__)


def register_blueprints(app):
    """Register all blueprints with the Flask app"""
    
    # Import blueprints
    from web.routes.auth import auth
    from web.routes.pages import pages
    from web.routes.api import api
    
    # Register auth routes
    app.register_blueprint(auth, url_prefix='/auth')
    logger.info("Registered auth routes at /auth/*")
    
    # Register page routes
    app.register_blueprint(pages)
    logger.info("Registered page routes at /*")
    
    # Register API routes
    app.register_blueprint(api, url_prefix='/api')
    logger.info("Registered API routes at /api/*")
    
    logger.info("All blueprints registered successfully")
